# Bot Control Plane - Production Environment Configuration
# Copy this file to .env and fill in your production values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=your_secure_db_password_here_minimum_16_chars

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# 32-byte base64 encoded key for cookie encryption
# Generate with: openssl rand -base64 32
COOKIE_KEY=your_32_byte_base64_encoded_key_here

# Secret key for session management
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_for_sessions_here

# =============================================================================
# MINIO/S3 CONFIGURATION
# =============================================================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
S3_BUCKET=artifacts

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Cookie domain (include leading dot for subdomain support)
COOKIE_DOMAIN=.yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute per IP address
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log retention period in days
LOG_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Number of API worker processes
API_WORKERS=4

# Number of concurrent Celery worker processes
WORKER_CONCURRENCY=4

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
# Grafana admin password
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# If using external database
# DATABASE_URL=postgresql+psycopg://user:password@external-db:5432/dbname

# If using external Redis
# REDIS_URL=redis://external-redis:6379/0

# If using external S3-compatible storage
# S3_ENDPOINT=https://your-s3-endpoint.com
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_BUCKET=your_bucket_name

# =============================================================================
# PAYMENT PROVIDERS (OPTIONAL)
# =============================================================================
# Stripe configuration
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Crypto payment configuration
# CRYPTO_WEBHOOK_SECRET=your_crypto_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# SMTP settings for notifications
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# DEVELOPMENT OVERRIDES (PRODUCTION ONLY)
# =============================================================================
# Disable authentication (DEVELOPMENT ONLY - NEVER USE IN PRODUCTION)
# AUTH_DISABLED=false

# Debug mode (DEVELOPMENT ONLY - NEVER USE IN PRODUCTION)
# DEBUG=false

# =============================================================================
# BACKUP CONFIGURATION (OPTIONAL)
# =============================================================================
# AWS S3 backup settings
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# SSL/TLS CONFIGURATION (OPTIONAL)
# =============================================================================
# SSL certificate paths (if using custom certificates)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================
# Enable/disable specific features
# ENABLE_METRICS=true
# ENABLE_AUDIT_LOGGING=true
# ENABLE_WEBHOOK_VERIFICATION=true